{
  "manifest_version": 3,
  "name": "Focus Lock",
  "version": "1.0",
  "description": "Focus extension with smart YouTube mode",

  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "js/background.js"
  },

  "action": {
    "default_popup": "html/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["js/youtube.js"]
    }
  ]
}
